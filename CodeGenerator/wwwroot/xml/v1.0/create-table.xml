<?xml version="1.0" encoding="utf-8" ?>
<Main>
  <Structure>
    <Line>/********************************************************************/</Line>
    <Line value="@newline"></Line>
    <Line>-- Responsable : </Line>
    <Line value="@setting" get="author"></Line>
    <Line value="@newline"></Line>
    <Line>-- Fecha de creación : </Line>
    <Line value="@today"></Line>
    <Line value="@newline"></Line>
    <Line>/********************************************************************/</Line>
    <Line value="@newline"></Line>
    <Line>create table [</Line>
    <Line value="schemaname" optional="true">].[</Line>
    <Line value="tablename">]</Line>
    <Line value="@newline"></Line>
    <Line>(</Line>
    <Line>
      <Loop value="fields">
        <Item value="@newline"></Item>
        <Item spaces="1"></Item>
        <Item value="fieldname"> </Item>
        <Item value="fieldtype"></Item>
        <Item value="fieldsize" optional="true" before="(">)</Item>
        <Item value="nullvalue" boolean="true" text="null|not null" before=" "></Item>
        <Item value="isidentity" boolean="true" text=" identity (1, 1)|"></Item>
        <Item value="defaultvalue" optional="true" before=" default(">)</Item>
        <Item>,</Item>
      </Loop>
    </Line>
    <Line value="@newline"></Line>
    <Line spaces="1">constraint </Line>
    <Line value="primarykeyname"> primary key</Line>
    <Line value="@newline"></Line>
    <Line spaces="1">(</Line>
    <Line>
      <Loop value="fields" filter="isprimarykey" containt="true">
        <Item value="@newline"></Item>
        <Item spaces="2"></Item>
        <Item value="fieldname"> asc</Item>
        <Item notlast="true">,</Item>
      </Loop>
    </Line>
    <Line value="@newline"></Line>
    <Line spaces="1">)</Line>
    <Line value="@newline"></Line>
    <Line>)</Line>
    <Line value="@newline"></Line>
    <Line>go</Line>
    <Line value="@newline"></Line>
    <Line value="@newline"></Line>
  </Structure>
</Main>